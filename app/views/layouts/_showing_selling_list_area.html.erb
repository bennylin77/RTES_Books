<section class="table" id="showing_selling_list_area_table">
	<a class="tr" href="<%=url_for :controller => "main", :action => "showSellingBook", :id => showing_selling_list_area%>">
		<div class="td">
			<div class="tr">
			</br>
			<%if !showing_selling_list_area.book_list.image_name.blank? %>	
			<%=image_tag showing_selling_list_area.book_list.image_name, :size => "65x75", :alt => showing_selling_list_area.book_list.name %>
			<%else%>
			<%=image_tag "NoImg.png", :size => "65x75", :alt => "無封面" %><br />
			<%end%>	
			</div>
			<div class="tr"  style="text-align: center; font-size: 12px;" >
			$<%= showing_selling_list_area.price %>
			</div>
		</div>
		<div class="td" style="padding-left: 15px; width:250px;">
			<div class="tr" style="font-weight: 700 ; font-size: 15px; color: #FF3333;">
				<br>
				<%if !showing_selling_list_area.course.blank?%>	
				<%=truncate(showing_selling_list_area.course, :length => 13, :omission => '...') %>
				<%else%>
				--	
				<%end%>
				<%if !showing_selling_list_area.available%>	
				<span id="showing_unavail">	
				已賣出
				</span>
				<%end%>					
			</div>
			<div class="tr" style="font-size: 12px;  height: 60px;">
				<%=truncate( showing_selling_list_area.book_list.name, :length => 70, :omission => '...') %>
			</div>			
			<div class="tr">			
				<div  style="font-size: 8px; ">
				詳細資訊..
				</div>
			</div>			
		</div>
		<div class="td" style="width:90px; text-align: center;  border-bottom: none;">
			<div class="tr">
				</br>					
				<a href=<%="http://www.facebook.com/"+findFacebookIDByUserID(showing_selling_list_area.user_id )%>><%= image_tag "https://graph.facebook.com/"+findFacebookIDByUserID(showing_selling_list_area.user_id )+"/picture", :size => "20x20" %></a>
			</div>
			<!--<div class="tr">
			<%# current_user.profile.mutual_friends("bennylin77").count%>個共同好友	
			</div>-->
			<div class="tr" style="font-size: 11px; font-weight: 700; height: 55px;">
			<%= truncate(showingListLocation('selling', showing_selling_list_area, @english_name), :length => 26, :omission => '...').html_safe %>
			</div>
			<div class="tr" style="font-size: 10px; ">
			<%= time_ago_in_words(showing_selling_list_area.created_at) %>之前
			</div>		
		</div>
	</a>
</section> 
